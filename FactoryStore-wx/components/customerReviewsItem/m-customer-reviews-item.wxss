/* 引入星星组件css */
@import "/components/stars/stars-template.wxss";
.m-customerReviews-list{
  display: flex;
  flex-direction: column;
  padding: 21rpx 0 25rpx;
  background-color: #fff;
  margin-top: 22rpx;
}
.m-customerReviews-user{
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 47rpx;
}
.m-customerReviews-image{
  width: 89rpx;
  height: 89rpx;
  border-radius: 50%;
  margin-right: 14rpx;
}
.m-customerReviews-username{
  font-size:26rpx;
  color:rgb(77, 75, 46);
}

/** 星星评分 */
.m-customerReviews-scoreItem {
  margin-left: 40%;

}
.m-customerReviews-star-score{
  color: #1f3463;
}

.m-customerReviews-main{
  display: flex;
  flex-direction: column;
  padding: 0 47rpx;
}
.m-customerReviews-main-content{
  font-size:29rpx;
  color:rgba(46,47,77,1);
  line-height:43rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.m-customerReviews-main-content.close{
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical
}
.m-customerReviews-main-content.open{
  display: -webkit-box;
  -webkit-line-clamp: 0;
  -webkit-box-orient: vertical
}
.m-open-close{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
}
.m-open-locse-text{
  font-size: 29rpx;
  color:rgba(106,110,148,1);
  line-height:43rpx;
  margin-right: 11rpx;
}
.m-customerReviews-img-list{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 28rpx;
}
.m-customerReviews-img{
  width: calc((100% - 30rpx) / 3);
  height: 149rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.m-customerReviews-reply{
  font-size:29rpx;
  color:rgba(46,47,77,1);
  display: flex;
  align-items: center;
  text-align: left;
  padding: 24rpx 15rpx;
  box-sizing: border-box;
  min-height:77rpx;
  background:rgba(245,245,245,1);
  border-radius:18rpx;
  position: relative;
  z-index: 2;
  margin-top: 30rpx;
}
.m-customerReviews-reply::before{
  content: '';
  position: absolute;
  border-left: 21rpx solid transparent;
  border-right: 21rpx solid transparent;
  border-bottom: 45rpx solid rgba(245,245,245,1);
  top:-20rpx;
  left: 50%;
  margin-left: -10rpx;
  z-index: 1;
}

.m-customerReviews-review{
  border-top: 2rpx solid #eee;
  margin-top: 33rpx;
  padding: 10rpx 47rpx 0;
}
.m-customerReviews-review-time{
  font-size:30rpx;
  color:rgba(239,97,97,1);
  margin-bottom: 20rpx;
}
.m-customerReviews-footer{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;  
  padding: 0 47rpx;
  margin-top: 40rpx;
}
.m-customerReviews-time{
  font-size:26rpx;
  color:rgba(149,149,149,1);
}
.m-customerReviews-btns{
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size:26rpx;
  color:rgba(46,47,77,1);
}
.m-customerReviews-img-like{
  width: 24rpx;
  height: 24rpx;
  margin-right: 5rpx;
}
.m-customerReviews-img-share{
  width: 21rpx;
  height: 22rpx;
  margin-right: 5rpx;
}
.m-customerReviews-btns-item{
  margin-left: 23rpx;
  border:1rpx solid rgba(125,125,125,.5);
  border-radius:12rpx;
  padding: 10rpx 14rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.arrow-v{
  display: flex;
  width: 14rpx;
  height: 14rpx;
  border: 1px solid #6A6E94;
  border-right: none;
  border-bottom: none;
  transform: rotate(-135deg);
  position: relative;
  transition: all 0.3s ease-in-out
}
.arrow-v.down{
  transform: rotate(45deg);
}
.arrow-v::before{
  content: '';
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  bottom:-10rpx;
  left:-10rpx;
}
