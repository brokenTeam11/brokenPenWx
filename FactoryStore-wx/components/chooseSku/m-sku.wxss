.specifications-conetnt-list{
  display: flex;
  flex-direction: column;
}
.specifications-conetnt-item{
  display: flex;
  flex-direction: column;
}
.specifications-conetnt-title{
  font-size:30rpx;
  font-family:PingFang-SC-Regular;
  color:rgba(46,47,77,1);
  margin-bottom: 30rpx;
}
.specifications-conetnt-main{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.specifications-conetnt-mainItem{
  display: block;
  line-height: 64rpx;
  text-align: center;
  min-width: 207rpx;
  padding: 0 5rpx;
  height: 64rpx;
  border:1rpx solid rgba(125,125,125,.5);
  border-radius: 2rpx;
  font-size:26rpx;
  font-family:PingFang-SC;
  font-weight:400;
  color:rgba(46,47,77,1);
  white-space: pre-wrap;
  margin-bottom: 30rpx;
  margin-right: 40rpx;
  box-sizing: border-box;
  transition: all 0.3s cubic-bezier(.25, .1, .3, 1.5);
}
.specifications-footer{
  display: flex;
  height: 166rpx;
  justify-content: center;
  align-items: center;
  border-top: 2.41rpx solid #eee;
}
.specifications-footer-btn{
  width:290rpx;
  height:87rpx;
  background:rgba(106,110,148,1);
  border-radius:6rpx;
  font-size:31rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(255,255,255,1);
  letter-spacing: 1px;
}
.fixed-width{
  width:85rpx;
  height:64rpx;
  min-width: 0;
  padding: 0;
}
.specifications-conetnt-mainItem.current{
  background:rgba(106,110,148,.5);
  border: none;
}.specifications-conetnt-mainItem.disabled{
  background-color: #e5e5e5;
  color: #b8B9C0;
  border: none;
}