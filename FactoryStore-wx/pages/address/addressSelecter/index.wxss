/* pages/address/addressSelecter/index.wxss */

.m-main {
  margin-top: 2rpx;
  padding-bottom: 104rpx;
}

.m-margin {
  padding: 0 51rpx 0 34rpx;
  background-color: white;
}

.m-address {
  padding: 29rpx 0 40rpx 0;
  display: flex;
  align-items: stretch;
  background-color: white;
  font-size: 30rpx;
  font-weight: 300;
  color: rgba(46, 47, 77, 1);
}

.m-address.border {
  border-top: 2rpx solid #f5f5f5;
}

.m-address .imgview {
  display: flex;
  align-items: center;
}

.m-address .checkImg {
  width: 39rpx;
  height: 39rpx;
}

.m-address .item {
  margin: 0 0 0 21rpx;
  width: 0;
  flex: 1;
}

.m-address .editImg {
  margin-left: 21rpx;
  width: 36rpx;
  height: 31rpx;
}

.m-address .namePhone {
  line-height: 52rpx;
  white-space: nowrap;
}

.m-address .phone {
  margin-left: 90rpx;
}

.m-address .address {
  margin-top: 13rpx;
  line-height: 1.5;
  word-break: break-all;
  font-size: 27rpx;
}

.m-bottom {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: RGBA(106, 110, 148, 1);
  text-align: center;
}

.m-bottom text {
  font-size: 34rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 104rpx;
}
