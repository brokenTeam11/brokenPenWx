/* pages/address/addAddress/index.wxss */


.m-address {
  display: flex;
  flex-direction: column;
  padding: 0 32rpx;
  font-weight: 400;
  font-size: 27rpx;
  color: rgba(46, 47, 77, 1);
  line-height: 95rpx;
  background: white;
}

.m-address>view {
  box-sizing: border-box;
  width: 100%;
}

.m-address .item1 {
  display: flex;
  height: 192rpx;
}

.m-address .right {
  flex: 1;
}

.m-address .right>view {
  height: 95rpx;
}

.m-address input {
  flex: 1;
  line-height: 95rpx;
  height: 95rpx;
}
.input-placeholder{
  line-height: 95rpx;
  height: 95rpx;
  font-size: 27rpx;
}

.m-address .item2 {
  display: flex;
  height: 95rpx;
  border-top: 2rpx solid RGBA(238, 238, 238, 1);
  padding-left: 10rpx;
  align-items: center;
}

.m-address .item2 .mapImg {
  width: 30rpx;
  height: 100%;
  padding-left: 48rpx;
  padding-right: 48rpx;
}

.m-address .item2 picker {
  flex: 1;
}

.m-borderbottom {
  font-size: 26rpx;
  border-bottom: 2rpx solid RGBA(238, 238, 238, 1);
}

.m-radio {
  width: 30rpx;
  height: 30rpx;
}

.m-sex {
  display: flex;
  font-size: 26rpx;
}

.m-sex radio {
  margin-right: 57rpx;
}

.m-sex text {
  margin-left: 23rpx;
}

radio {
  display: flex;
}

radio .wx-radio-input {
  border-radius: 50%; /* 圆角 */
  width: 36rpx; /* 背景的宽 */
  height: 36rpx; /* 背景的高 */
  border: 4rpx solid #6a6e94;
}

/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */

radio .wx-radio-input.wx-radio-input-checked {
  background: #6a6e94;
}

/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */

radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%; /* 圆角 */
  width: 36rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 36rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 36rpx;
  text-align: center;
  font-size: 30rpx; /* 对勾大小 30rpx */
  color: #fff; /* 对勾颜色 白色 */
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.m-check {
  display: flex;
  font-size: 27rpx;
  font-weight: 400;
  color: rgba(46, 47, 77, 1);
  line-height: 82rpx;
  align-items: center;
  padding-left: 48rpx;
}

.m-check image {
  width: 30rpx;
  height: 30rpx;
  background-color: white;
}

.m-check text {
  margin-left: 11rpx;
}

.m-btn {
  margin: 0 auto;
  margin-top: 57rpx;
  width: 581rpx;
  background-color: RGBA(106, 110, 148, 1);
  font-size: 30rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 85rpx;
  text-align: center;
  border-radius: 6rpx;
}
