@import "./../template/none-page.wxss";

page {
  height: 100%;
}

.m-nomore {
  background-color: rgba(31, 32, 52, 0.1);
}

.m-loading {
  background-color: rgba(31, 32, 52, 0.1);
}

.m-my-order {
  display: flex;
  flex-direction: column;
  letter-spacing: 1px;
}

.m-order-nav {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-bottom: 2rpx solid #eee;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  background-color: #fff;
}

.m-order-nav-item {
  display: flex;
  flex-direction: column;
  height: 95rpx;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 400;
  color: #2e2f4d;
  position: relative;
}

.m-order-count {
  display: block;
  min-width: 34rpx;
  height: 34rpx;
  background: rgba(237, 118, 108, 1);
  border-radius: 17rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  line-height: 34rpx;
  letter-spacing: 0;
  position: absolute;
  top: 15rpx;
  right: -18rpx;
}

.f-current {
  color: #fb1c05;
}

.m-nav-underline {
  width: 100%;
  height: 5rpx;
  background-color: #fb1c05;
  position: absolute;
  bottom: 2rpx;
  display: none;
}

.m-nav-underline.show {
  display: flex;
}

.m-order-list {
  padding-top: 97rpx;
  display: flex;
  flex-direction: column;
}

.m-order-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 36rpx;
  background-color: #fff;
}

.m-order-item:last-of-type {
  margin-bottom: 0;
}

.m-order-item-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 42rpx 0 36rpx;
  height: 89rpx;
  border-bottom: 2rpx solid #eee;
  font-size: 27rpx;
  color: #2e2f4d;
}

.m-order-time {
  font-weight: 200;
}

.m-order-status {
  font-weight: bold;
}

.m-order-item-center {
  display: flex;
  flex-direction: column;
  padding: 0 34rpx;
}

.m-order-item-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 28rpx;
  padding-left: 0;
  border-bottom: 2rpx solid #eee;
}

.m-order-img-wp {
  width: 138rpx;
  height: 138rpx;
  margin-right: 17rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.m-order-img {
  width: 138rpx;
  height: 138rpx;
}

.m-order-desc {
  flex: 1;
  color: #2e2f4d;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.m-order-desc-info {
  display: flex;
  flex-direction: column;
}

.m-order-name {
  font-size: 27rpx;
  line-height: 54rpx;
}

.m-order-detail {
  font-size: 26rpx;
  font-weight: 300;
  line-height: 54rpx;
}

.m-order-size {
  font-size: 26rpx;
  font-weight: 300;
  line-height: 54rpx;
}

.m-order-price {
  font-size: 26rpx;
  font-weight: 300;
  line-height: 54rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.m-order-item-footer {
  display: flex;
  flex-direction: column;
  padding: 10rpx 36rpx;
}

.m-oder-count {
  display: flex;
  justify-content: flex-end;
  font-size: 26rpx;
  font-weight: 300;
  color: rgba(46, 47, 77, 1);
  line-height: 54rpx;
}

.s-red {
  color: #fb1c05;
}

.m-order-btns {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-top: 10rpx;
  margin-bottom: 13rpx;
}

.m-order-btn {
  width: 138rpx;
  height: 58rpx;
  border: 1px solid rgba(106, 110, 148, 1);
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 27rpx;
  color: rgba(46, 47, 77, 1);
  margin-left: 24rpx;
}

.m-order-btn:last-child {
  background-color: #6a6e94;
  color: #fff;
}

.f-mgr15 {
  margin-right: 15rpx;
}
