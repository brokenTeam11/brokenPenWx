  padding-left: 35rpx;
}

.m-order-detail-coentent {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 90rpx;
}

.m-order-detail-banner-text {
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
}

.m-order-addr {
  display: flex;
  flex-direction: column;
  padding: 22rpx 34rpx;
  background-color: #fff;
  margin-bottom: 24rpx;
}

.m-order-addr-top {
  display: flex;
  flex-direction: column;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(238, 238, 238, 0.45);
}

.m-order-addr-title {
  font-weight: bold;
  color: #2e2f4d;
  font-size: 30rpx;
  line-height: 52rpx;
}

.m-order-addr-user {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.m-order-addr-username {
  font-size: 30rpx;
  color: rgba(46, 47, 77, 1);
  line-height: 52rpx;
}

.m-order-addr-phone {
  font-size: 30rpx;
  color: rgba(46, 47, 77, 1);
  line-height: 52rpx;
}

.m-order-addr-bot {
  display: flex;
  flex-direction: column;
  padding-top: 18rpx;
}

.m-order-addr-usermessage {
  font-size: 30rpx;
  color: rgba(46, 47, 77, 1);
  line-height: 52rpx;
}

.m-order-detail-desc {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding: 0 34rpx 10rpx;
  margin-bottom: 24rpx;
}

.good-list {
  display: flex;
  flex-direction: column;
}

.good-list-item {
  display: flex;
  flex-direction: column;
}

.m-order-detail-desc-top {
  display: flex;
  align-items: center;
  font-size: 27rpx;
  color: rgba(46, 47, 77, 1);
  height: 74rpx;
  border-bottom: 2rpx solid #eee;
}

.m-order-detail-desc-center {
  display: flex;
  flex-direction: column;
}

.m-order-detail-item {
  padding: 20rpx 0;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  border-bottom: 2rpx solid #eee;
}

m-order-detail-img-wp {
  width: 108rpx;
  height: 97rpx;
  margin-right: 9rpx;
}

.m-order-detail-img {
  width: 108rpx;
  height: 97rpx;
  padding-top: 12rpx;
  margin-right: 12rpx;
}

.m-order-detail-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
}

.m-order-detail-name-wp {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.m-order-detail-name {
  color: #2e2f4d;
  font-size: 27rpx;
  line-height: 52rpx;
  max-width: 400rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.m-order-detail-price {
  font-weight: 300;
  font-size: 26rpx;
  line-height: 52rpx;
  color: #2e2f4d
}

.m-order-detail-specification {
  font-size: 26rpx;
