}

.m-order-detail-desc-price-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 26rpx;
  color: rgba(46, 47, 77, 1);
  line-height: 54rpx;
}

.f-fs-27 {
  font-size: 27rpx;
}

.f-fw-bold {
  font-weight: bold;
}

.f-col {
  color: #fb1c05;
}

.m-order-detail-bot {
  display: flex;
  flex-direction: column;
  padding: 26rpx 34rpx 15rpx;
  background-color: #fff;
  font-size: 26rpx;
  color: rgba(46, 47, 77, 1);
  line-height: 52rpx;
  margin-bottom: 24rpx;
}

.m-order-detail-bot-item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  position: relative;
}

.m-order-detail-bot-title {
  width: 250rpx;
  letter-spacing: 0;
}

.m-order-detail-bot-value {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  letter-spacing: 0;
  word-break: break-all;
}

.copy-btn {
  width: 84rpx;
  height: 40rpx;
  border: 1px solid rgba(46, 47, 77, 0.5);
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: rgba(46, 47, 77, 1);
  position: absolute;
  right: 0;
  font-size: 26rpx;
}

.m-footer-btns {
  height: 90rpx;
  background-color: #fff;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 0 34rpx;
}

.m-footer-btn {
  width: 138rpx;
  height: 58rpx;
  border: 1px solid rgba(106, 110, 148, 1);
  border-radius: 6rpx;
  font-size: 27rpx;
  color: rgba(46, 47, 77, 1);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 24rpx;
}

.m-footer-btn.last {
  background-color: #6a6e94;
  color: #fff;
}

.m-order-btn {
  min-width: 132rpx;
  height: 63rpx;
  border: 1px solid rgba(46, 47, 77, 0.5);
  border-radius: 29rpx;
  font-size: 26rpx;
  color: rgba(46, 47, 77, 1);
  letter-spacing: 1px;
  line-height: 63rpx;
  text-align: center;
  position: absolute;
  right: 0;
  top: 67rpx;
  box-sizing: border-box;
  background-color: transparent;
}
