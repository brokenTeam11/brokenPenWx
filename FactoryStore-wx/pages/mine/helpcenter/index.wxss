/* pages/mine/helpcenter/index.wxss */
.m-helpcneter{

}
.m-helpcenter-list{
  display: flex;
  flex-direction: column;
  margin-bottom: 13rpx;
}
.m-helpcenter-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  border-bottom: 2rpx solid #eee;
  background-color: #FFF;
  padding:  0 52rpx;
}
.m-helpcenter-item:last-child{
  border:none
}
.m-helpcenter-item-left{
  font-size:33rpx;
  color:rgba(46,47,77,1);
  display: flex;
  align-items: center;
}
.m-helpcenter-item-left image{
  width: 42rpx;
  height: 42rpx;
  margin-right: 18rpx;
}
.m-helpcenter-item-right{
  width: 20rpx;
  height: 20rpx;
  border: 1px solid #b2b2b2;
  border-right: none;
  border-bottom:none;
  transform: rotate(135deg)
}
.m-help-service{
  display: flex;
  flex-direction: column;
  background-color: #fff;
  font-size:27rpx;
  color:rgba(46,47,77,1);
}
.m-help-service-top{
  display: flex;
  height: 101rpx;
  justify-content: center;
  align-items: center;
  border-bottom: 2rpx solid #eee;
}
.m-help-service-bottom{
  display: flex;
  flex-direction: row;
  height: 104rpx;
}
.m-help-service-bottom-item{
  flex: 1;
  display: flex; 
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  background:transparent;
  border:none;
  border-radius: 0;
  padding: 0;
  font-size: 27rpx;
}
.m-help-service-bottom-item::after{
  border: none
}
.m-help-service-bottom-item:first-child{
  border-right: 2rpx solid #eee
}
.m-help-service-bottom-item image{
  margin-right: 18rpx;
}
.m-help-service-bottom-item image.left{
  width: 42rpx;
  height: 42rpx;
}
.m-help-service-bottom-item image.right{
  width: 42rpx;
  height: 38rpx;
}