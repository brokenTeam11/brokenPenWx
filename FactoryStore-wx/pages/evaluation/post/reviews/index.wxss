/* pages/evaluation/post/reviews/index.wxss */
@import './../../../../components/evaluation/post.wxss';
page{
  background-color: rgba(31, 32, 52, .1);
}
.m-post-reviews{
  background-color: #fff;
  display: flex;
  flex-direction: column
}
.m-post-reviews-top{
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #eee;
  padding-bottom: 10rpx
}
.m-good-image{
  width: 123rpx;
  height:123rpx;
  margin-left: 51rpx;
  margin-right: 17rpx;
}
.m-good-name{
  font-size:30rpx;
  font-weight:bold;
  color:rgba(46,47,77,1);
}
.m-post-reviews-center{
  display: flex;
  flex-direction: column;
  padding: 32rpx 60rpx 14rpx;
  border-bottom: 2rpx solid #eee;
}
.m-post-reviews-textarea{
  width: 100%;
  font-size:30rpx;
  color:rgba(188,187,187,1);
  height: 227rpx;
  box-sizing: border-box;
  padding-bottom: 20rpx;
  letter-spacing: 1px;
}
.m-post-reviews-btn{
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  width: 100%;
  height:106rpx;
  font-size: 34rpx;
  justify-content: center;
  align-items: center;
  color: #fff;
  background-color: #6A6E94;
  background:rgba(106,110,148,1);
}
.m-anonymous-evaluation{
  margin-bottom: 0
}