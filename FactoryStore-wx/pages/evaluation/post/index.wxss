/* pages/evaluation/post/index.wxss */

page {
  letter-spacing: 1px;
}

.mgb-27 {
  margin-bottom: 27rpx;
}

.mgb-40 {
  margin-bottom: 40rpx;
}

.mgb-25 {
  margin-bottom: 25rpx;
}

.mgr-25 {
  margin-right: 25rpx;
}

.fs-29 {
  font-size: 29rpx;
}

.f-bold {
  font-weight: 400;
}

/* 评分以及买家印象开始 */

.m-post-top {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-bottom: 20rpx;
}

/* 评分开始 */

.m-good-score {
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  padding: 44rpx 0 5rpx 51rpx;
  border-bottom: 2rpx solid #eee;
}

.m-good-image {
  width: 123rpx;
  height: 123rpx;
  margin-right: 30rpx;
}

.good-score {
  flex: 1;
  font-size: 29rpx;
  color: rgba(46, 47, 77, 1);
}

.m-star-list {
  display: flex;
  flex-direction: row;
  margin-top: 18rpx;
}

.m-star {
  width: 42rpx;
  height: 40rpx;
  margin-right: 17rpx;
}

.m-star.bling {
  background: url(https://kpzuan.com/api/image/lightup_btn@3x.png) no-repeat center center;
  background-size: cover;
}

.m-star.gray {
  background: url(https://kpzuan.com/api/image/gray_btn@3x.png) no-repeat center center;
  background-size: cover;
}

/* 评分结束 */

/* 买家印象开始 */

.m-buyer-impression {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 24rpx 0 0 62rpx;
}

.m-impression-list {
  margin-top: 32rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  font-size: 29rpx;
  color: #2e2f4d;
}

.m-impression {
  width: 171rpx;
  height: 53rpx;
  border: 1rpx solid rgba(125, 125, 125, 0.5);
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 50rpx;
}

.m-impression.current {
  background-color: #6a6e94;
  color: #fff;
}

/* 买家印象结束 */

/* 评分以及买家印象开始 */

/* 评价开始 */

.m-evaluation {
  display: flex;
  background-color: #fff;
  flex-direction: column;
  padding: 34rpx 56rpx 19rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #eee;
}

.m-evaluation-area {
  height: 150rpx;
  margin-bottom: 40rpx;
}

.m-evaluation-area textarea {
  width: 100%;
  height: 150rpx;
  font-size: 30rpx;
  color: rgba(188, 187, 187, 1);
  z-index: 1;
}

.m-evaluation-img-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-bottom: -26rpx;
}

.m-evaluation-img-wp {
  width: 124rpx;
  height: 124rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
  border-radius: 12rpx;
  position: relative;
  margin-right: 26rpx;
  margin-bottom: 26rpx;
}

.m-evaluation-img {
  width: 100%;
  height: 100%;
}

.m-close {
  width: 34rpx;
  height: 34rpx;
  background: rgba(106, 110, 148, 1);
  border-radius: 50%;
  position: absolute;
  right: -57rpx;
  top: -57rpx;
  border: 40rpx solid transparent;
  background-clip: padding-box;
}

.m-close::after, .m-close::before {
  content: '';
  display: block;
  width: 25rpx;
  height: 1px;
  background-color: #fff;
  position: absolute;
  margin-top: 16rpx;
  margin-left: 7rpx;
}

.m-close::after {
  transform: rotate(45deg);
}

.m-close::before {
  transform: rotate(135deg);
}

.m-choose-img-wp {
  width: 124rpx;
  height: 124rpx;
  border-radius: 12rpx;
  border: 1rpx dotted rgba(125, 125, 125, 1);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin-bottom: 26rpx;
}

.m-choose-img {
  width: 60rpx;
  height: 46rpx;
  margin-bottom: 5rpx;
}

.m-choose-text {
  font-size: 22rpx;
  color: rgba(188, 187, 187, 1);
}

.m-anonymous-evaluation {
  display: flex;
  height: 86rpx;
  flex-direction: row;
  align-items: center;
  font-size: 29rpx;
  font-weight: bold;
  color: rgba(46, 47, 77, 1);
  background-color: #fff;
  padding-left: 34rpx;
  margin-bottom: 20rpx;
}

/* 评价结束 */

checkbox {
  display: flex;
}

checkbox .wx-checkbox-input {
  border-radius: 50%; /* 圆角 */
  width: 36rpx; /* 背景的宽 */
  height: 36rpx; /* 背景的高 */
  border: 2rpx solid #6a6e94;
}

/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #6a6e94;
}

/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%; /* 圆角 */
  width: 36rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 36rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 36rpx;
  text-align: center;
  font-size: 30rpx; /* 对勾大小 30rpx */
  color: #fff; /* 对勾颜色 白色 */
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

/* 服务描述开始 */

.service-score {
  display: flex;
  flex-direction: column;
  padding: 37rpx 46rpx 5rpx;
  background-color: #fff;
}

.service-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 29rpx;
  font-weight: 400;
  color: rgba(46, 47, 77, 1);
  margin-bottom: 40rpx;
}

.service-item .m-star-list {
  margin-top: 0;
  margin-left: 25rpx;
}

/* 服务描述结束 */

/* 提交按钮开始 */

.m-submit {
  width: 100%;
  height: 108rpx;
  background-color: #6a6e94;
  font-size: 34rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  color: rgba(255, 255, 255, 1);
}

/* 提交按钮结束 */

/* 弹窗样式 */

.mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  background: rgba(31, 32, 52, 0.5);
  overflow: hidden;
}

.mask-content {
  display: flex;
  width: 100%;
  position: relative;
  z-index: 3;
  background-color: #fff;
  flex-direction: column;
  align-items: center;
}

.mask-content::before {
  content: '';
  display: block;
  width: 0;
  height: 0;
  border-bottom: 15rpx solid #e5e5e5;
  border-left: 30rpx solid transparent;
  border-right: 30rpx solid transparent;
  position: absolute;
  left: 85rpx;
  top: -12rpx;
  z-index: 4;
}

.mask-input {
  width: 627rpx;
  height: 75rpx;
  border: 1rpx solid rgba(125, 125, 125, 0.5);
  border-radius: 12rpx;
  margin-top: 13rpx;
  font-size: 29rpx;
  box-sizing: border-box;
  padding-left: 10rpx;
}

.mask-btns {
  display: flex;
  flex-direction: row;
  margin-top: 38rpx;
  margin-bottom: 18rpx;
  width: 627rpx;
  justify-content: space-between;
}

.mask-btn {
  width: 272rpx;
  height: 83rpx;
  border-radius: 6rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
}

.mask-btn.cancel {
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(125, 125, 125, 1);
  font-size: 30rpx;
  color: rgba(46, 47, 77, 1);
}

.mask-btn.confirm {
  background-color: #6a6e94;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 1);
}
