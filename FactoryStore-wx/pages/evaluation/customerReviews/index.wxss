/* pages/evaluation/customerReviews/index.wxss */
page {
  height: 100%;
}

.m-customerReviews {
  height: 100%;
  position: fixed;
}

/** 加载更多和下拉刷新组件*/
.listView_box {
  width: 100vw;
  /* height: calc(100vh - 120rpx - 24rpx); */
  height: 80%;
  margin-top: 24rpx;
  background: #fff;
}

.m-customerReviews-sv {
  display: flex;
  height: 80%;
  box-sizing: border-box
}

.m-customerReviews-top {
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.m-customerReviews-top-title {
  display: flex;
  flex-direction: row;
  height: 101rpx;
  align-items: center;
  font-size: 29rpx;
  color: rgba(239, 97, 97, 1);
}

.m-customerReviews-top-title image {
  width: 45rpx;
  height: 38rpx;
  font-size: 29rpx;
  color: rgba(239, 97, 97, 1);
  margin-right: 17rpx;
  margin-left: 34rpx
}

.m-customerReviews-label-list {
  display: flex;
  box-sizing: border-box;
  flex-wrap: wrap;
  flex-direction: row;
  align-items: center;
  margin: 0 57rpx;
  transition: all 4s ease-in-out
}

.m-customerReviews-label-list.close {
  max-height: 150rpx;
  overflow: hidden;
}

.m-customerReviews-label {
  display: flex;
  flex-direction: row;
  height: 52rpx;
  align-items: center;
  box-sizing: border-box;
  padding: 0 15rpx;
  border: 1px solid #eee;
  font-size: 29rpx;
  color: rgb(12, 12, 19);
  border-radius: 26rpx;
  margin-bottom: 28rpx;
}
.m-customerReviews-label.down {
  transform: rotate(45deg);
}

.m-customerReviews-label.innerText {
  white-space: nowrap
}

.m-customerReviews-label.current {
  background-color: #6A6E94;
  color: #fff;
}

.m-customerReviews-label-item {
  width: 30%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.arrow-wp {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 20rpx;
}

.arrow-v {
  display: flex;
  width: 14rpx;
  height: 14rpx;
  border: 1px solid #6A6E94;
  border-right: none;
  border-bottom: none;
  transform: rotate(-135deg);
  position: relative;
  transition: all 0.3s ease-in-out
}

.arrow-v.down {
  transform: rotate(45deg);
}

.arrow-v::before {
  content: '';
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
  left: -10rpx;
}


