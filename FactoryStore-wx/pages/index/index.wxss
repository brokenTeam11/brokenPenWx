/**index.wxss**/

.m-main {
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 1;
}

.m-nav {
  padding: 74rpx 0 26rpx 0;
  background-color: rgba(255, 255, 255, 1);
  display: flex;
  position: relative;
}

.m-nav .s-ad {
  position: absolute;
  background: #f7f7f7;
  box-shadow: 0rpx 2rpx 11rpx 3rpx rgba(189, 189, 189, 0.21);
  border-radius: 50rpx;
  padding: 17rpx 28rpx;
  display: flex;
  align-items: center;
  left: 98rpx;
  top: -68rpx;
}

.m-nav .s-ad image {
  width: 64rpx;
  height: 64rpx;
}

.m-nav .s-ad .title {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(46, 47, 77, 1);
}

.m-nav .s-ad .info {
  margin-left: 25rpx;
  display: flex;
  flex-direction: column;
}

.m-nav .s-ad .content {
  margin-top: 14rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(46, 47, 77, 1);
}

.m-nav .s-ad .content text {
  vertical-align: middle;
}

.m-nav .s-ad .iconfont {
  font-size: 30rpx;
}

.m-nav .s-ad .iconfont:not(:first-of-type) {
  margin-left: 21rpx;
}

.m-nav .s-ad .content text:not(.iconfont) {
  margin-left: 5rpx;
}

.m-nav .item {
  display: flex;
  width: 25%;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.m-nav .item .categoryImages {
  width: 117rpx;
  height: 117rpx;
  background-color: RGBA(106, 110, 148, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  overflow: hidden;
}

.m-nav .item image {
  width: 117rpx;
  height: 117rpx;
}

.m-nav .item text {
  margin-top: 23rpx;
  font-size: 25.94rpx;
  font-weight: 400;
  color: #4c4b4b;
}

.m-customerservice {
  width: 63rpx;
  position: fixed;
  top: 712rpx;
  right: 0;
  background: rgba(106, 110, 148, 1);
  opacity: 0.87;
  z-index: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 8rpx 0 0 8rpx;
}

.m-customerservice button {
  margin: 25rpx 0 21rpx 0;
  background-color: transparent;
  padding: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.m-customerservice button::after {
  border: 0px;
}

.m-customerservice image {
  width: 39rpx;
  height: 36rpx;
}

.m-customerservice text {
  margin-top: 17rpx;
  font-size: 25.2rpx;
  font-weight: 400;
  letter-spacing: 8rpx;
  color: rgba(255, 255, 255, 1);
  writing-mode: vertical-lr;
}

.g-areas {
  margin-top: 13rpx;
}

.u-bigtitle {
  font-size: 34rpx;
  font-weight: 500;
  color: rgba(46, 47, 77, 1);
  line-height: 44rpx;
}

.u-bigtitle .icon-new {
  margin-left: 19rpx;
  font-size: 28rpx;
  color: #ed4b4f;
}

.u-bigtitle .icon-flame {
  margin-left: 10rpx;
  font-size: 30rpx;
  color: #ed4b4f;
}

.u-ad1 {
  box-sizing: border-box;
  display: flex;
  font-size: 22rpx;
  font-weight: 400;
  color: rgba(238, 60, 36, 1);
  border: 1px solid rgba(238, 60, 36, 1);
  line-height: 37rpx;
  border-radius: 6rpx;
}

.u-ad1 view {
  padding: 0 13rpx;
  background-color: rgba(238, 60, 36, 1);
  color: #fff;
  border-bottom-right-radius: 6rpx;
  border-top-right-radius: 6rpx;
}

.u-ad1 text {
  padding: 0 6rpx;
}

.u-more {
  flex: 1;
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
}

.u-more text {
  font-size: 26rpx;
  color: rgba(125, 125, 125, 1);
  line-height: 34rpx;
}

.u-more .icon-arrow {
  margin-left: 7rpx;
  font-size: 24rpx;
  color: #ababab;
  line-height: 34rpx;
}

.m-promotions {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  background-color: #f5f5f5;
}

.m-fragment {
  width: 100%;
  border-bottom: 2rpx solid #f5f5f5;
  background-color: #fff;
}

.m-fragment .top {
  display: flex;
  align-items: center;
  padding: 25rpx;
}

.m-fragment .goodsScroll {
  box-sizing: border-box;
  padding-left: 29rpx;
  padding-bottom: 22rpx;
}

.m-fragment .main {
  display: flex;
}

.m-fragment .item {
  padding: 18rpx 13rpx;
  display: flex;
  align-items: center;
  background: #f7f7f7;
}

.m-fragment .item:not(:first-of-type) {
  margin-left: 17rpx;
}

.m-fragment .item image {
  width: 165rpx;
  height: 165rpx;
}

.m-fragment .info {
  margin-left: 42rpx;
  width: 280rpx;
  display: flex;
  flex-direction: column;
  font-size: 27rpx;
  font-weight: 300;
  color: rgba(46, 47, 77, 1);
  line-height: 54rpx;
}

.m-fragment .info text {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.m-fragment .price {
  font-size: 23rpx;
  text-decoration: line-through;
}

.m-fragment .activityprice {
  color: #ee3c24;
  font-weight: 600;
}

.m-fragment .PBbutton {
  margin-left: 26rpx;
  padding: 0 24rpx 0 17rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 54rpx;
  background: #62648a;
  border-radius: 6rpx;
  white-space: nowrap;
  height: 60rpx;
  letter-spacing: 2rpx;
}

.m-hot, .m-new {
  box-sizing: border-box;
  width: calc((100% - 2rpx) / 2);
  background-color: #fff;
  padding: 18rpx 22rpx 33rpx 24rpx;
}

.m-hot .main, .m-new .main {
  margin-top: 27rpx;
  display: flex;
  justify-content: space-between;
}

.m-hot .goods, .m-new .goods {
  display: flex;
  flex-direction: column;
  width: 145rpx;
  align-items: center;
}

.m-hot .goods image, .m-new .goods image {
  box-sizing: border-box;
  width: 145rpx;
  height: 145rpx;
  padding: 15rpx;
  background: #f7f7f7;
}

.m-hot .goods text, .m-new .goods text {
  margin-top: 18rpx;
  font-size: 25rpx;
  font-weight: 300;
  color: rgba(125, 125, 125, 1);
  text-align: center;
  white-space: nowrap;
}

.m-new .goods text {
  color: #6a6e94;
}

.m-special {
  background-color: #fff;
}

.special-padding {
  padding: 34rpx 27rpx;
}

.m-special .specialImage {
  width: 750rpx;
  height: 320rpx;
}

.m-special .main {
  display: flex;
}

.m-special .item {
  margin-left: 21rpx;
  margin-right: 21rpx;
  padding: 8rpx 0 28rpx;
  display: flex;
  flex-direction: column;
  flex-basis: 266rpx;
  flex-grow: 0;
  flex-shrink: 0;
  align-items: center;
}

.m-special .item text {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  text-align: center;
}

.m-special .price {
  font-size: 29rpx;
  font-weight: 500;
  color: rgba(106, 110, 148, 1);
  line-height: 43rpx;
}

.m-special .name {
  font-size: 26rpx;
  font-weight: 300;
  color: #2e2f4d;
  line-height: 43rpx;
}

.m-special .item image {
  width: 166rpx;
  height: 166rpx;
}
